<configuration>

  <conversionRule conversionWord="coloredLevel" converterClass="play.api.Logger$ColoredLevel" />

  <timestamp key="byDay" datePattern="yyyyMMdd"/>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
     <file>${LOGGER_HOME:-${application.home}}/logs/application-${byDay}.log</file>
     <encoder>
       <pattern>%.-1level%date %logger{0}:[%thread] %message%n%xException</pattern>
     </encoder>
   </appender>

   <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
     <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
       <level>ERROR</level>
     </filter>
     <target>System.err</target>
     <encoder>
       <pattern>%date - [%level] - from %logger in %thread %n%message%n%xException%n</pattern>
     </encoder>
   </appender>

  <logger name="play" level="INFO" />
  <logger name="application" level="INFO" />
  <logger name="org.apache.spark" level="INFO" />
  <logger name="BigGraph backend" level="INFO" />

  <root level="ERROR">
    <appender-ref ref="FILE" />
    <appender-ref ref="STDERR" />
  </root>

</configuration>
